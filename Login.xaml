<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Login"
             BackgroundColor="White"
             Title="Đăng nhập">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">

            <!-- Logo / Avatar -->
            <!-- Bạn có thể thêm ảnh nếu cần -->

            <Label Text="Đăng nhập tài khoản"
                   FontSize="24"
                   TextColor="DarkBlue"
                   HorizontalOptions="Center" />

            <!-- Username -->
            <Frame BorderColor="#cccccc" CornerRadius="10" Padding="10">
                <Entry x:Name="UsernameEntry" Placeholder="Tên đăng nhập" />
            </Frame>

            <!-- Password -->
            <Frame BorderColor="#cccccc" CornerRadius="10" Padding="10">
                <Entry x:Name="PasswordEntry" Placeholder="Mật khẩu" IsPassword="True" />
            </Frame>

            <!-- Login Button -->
            <Button Text="Đăng nhập"
                    BackgroundColor="#1877F2"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnLoginClicked" />

            <!-- Register redirect -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Chưa có tài khoản?" />
                <Label Text=" Đăng ký ngay" TextColor="#1877F2" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterRedirectTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>